---
import '../styles/global.css';

export interface Props {
  title?: string;
}

const { title = "Soapy Dolphin: Melbourne's Premier Laundry Care Service" } = Astro.props;
---
<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <meta name="generator" content={Astro.generator} />
  </head>
  <body>
    <slot />
  </body>
</html>